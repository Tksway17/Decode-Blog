<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs')%>
    <title>Document</title>
</head>
<body>
    <%- include('partials/autho-header.ejs')%>
    <div class="content">
        <form action="/api/blogs/edit" method="POST" enctype="multipart/form-data">
        <div class="new-blog">
            <h1>Редактировать блог</h1>
            <fieldset>
                <input type="hidden" value="<%= blog._id%>" name="id">
            </fieldset>
                <fieldset class="fieldset">
                    <input type="text" value="<%= blog.title%>" name="title">
                </fieldset>
        </div>
        <fieldset class="arrow-category">
            <select name="category">
                <option value="" disabled selected>Выберите категорию</option>
                <%
                    categories.forEach(category => {
                        if(category.id == blog.category){
                    %>
                        <option value="<%= category._id%>" selected><%= category.name%></option>
                    <%
                        }else{
                    %>
                        <option value="<%= category._id%>"><%= category.name%></option>
                    <%
                        }
                    })
                %>
            </select>
        </fieldset>
        <fieldset class="choose-img">
            <label for="blogimage" class="choose-img-label">Выберите картинку</label>
            <input type="file" id="blogimage" name="image" class="choose-img-input">
        </fieldset>
        
        <div class="blog-description">
            <input type="text" value="<%= blog.blogDescription%>" name="blogDescription">
        </div>
        <div class="create-blog">
            <button type="submit">Сохранить</button>
        </div>
    </form>
    </div>
    <%- include('partials/scripts.ejs')%>
</body>