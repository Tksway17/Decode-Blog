<div class="header">
    <div class="logo-text">
        <a href="/"><h1>Decode blog</h1></a>
    </div>
    <form class="header-search">
        <div class="header-input">
            <input type="text" name="search" placeholder="Поиск по блогам">
        </div>
        <div class="header-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="25px" fill="white">
                <path d="M0 0h24v24H0z" fill="none"/>
                <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
            </svg>
            <button type="submit">Найти</button>
        </div>
    </form>
    <div class="header-login">
        <%
            if(user._id &&  user.isAdmin){
        %>
        <img src="/images/avatar.png" alt="" style="border-radius: 50%; cursor: pointer;" onclick="window.location='/admin/<%=user._id%>';">
        <%
            }else if(user._id && !user.isAdmin){
        %>
        <img src="/images/avatar_profile.jpg" alt="" style="border-radius: 50%; cursor: pointer; width: 100px" onclick="window.location='/profile/<%=user._id%>';">
        <%
            }else{
        %>
        <a href="/register">Регистрация</a>
        <a href="/login">Вход</a>
        <%
            }
        %>
    </div>
</div>